@using LicentaApp.Domain
@using LicentaApp.Domain.Metadata
@using LicentaApp.Domain.ValueObjects
@model IEnumerable<OchelariDeSoareView>
<div id="lista-ochelari-soare-data">
    <table class="table">
        <tr>
            <th>
                Cod
                <input type="text" name="filter.Cod" id="filter_Cod" />

            </th>
            <th>
                Denumire
                <input type="text" name="filter.Denumire" id="filter_Denumire" />

            </th>
            <th>
                Discount
                <input type="text" name="filter.Discount" id="filter_Discount" />

            </th>
            <th>
                Este polarizat?
                <select name="filter.EstePolarizat" id="filter_EstePolarizat">
                    <option value="">Selecteaaza</option>
                    @foreach (var item in typeof(DaNu).ToSelectList())
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </th>
            <th>
                Pret
                <input type="text" name="filter.Pret" id="filter_Pret" />

            </th>
            <th style="min-width: 150px;">
                <a id="filtreaza" class="btn-floating btn-small waves-effect waves-light red"><i class="fas fa-search"></i></a>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Denumire)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    @(ProductMetadata.Deserializers.EnumDeserializer<DaNu>(item.EstePolarizat))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pret)
                </td>
                <td>
                    @Html.Partial("_RUDButtons", new Tuple<int, string>(item.Id, "Produse"))
                </td>
            </tr>
        }

    </table>
    @Html.Partial("Produse/FilteredPagination")
</div>