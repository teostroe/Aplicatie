@using LicentaApp.Domain
@model LicentaApp.ViewModels.ComandaAprovizionare.ComandaAprivizionareCreate


<div class="row">
    <div class="col m5">
        <p>Cod produs</p>
    </div>
    <div class="col m5">
        <p>Cantitate</p>
    </div>

    <div class="col m2">
    </div>
</div>

@if (this.Model?.Coduri != null)
{
    for (int i = 0; i < this.Model.Coduri.Length; ++i)
    {
        <div class="row">
            <div class="col m5">
                <input type="text" name="Coduri" value="@this.Model.Coduri[i]"/>
            </div>
            <div class="col m5">
                <input type="number" name="Cantitati" value="@this.Model.Cantitati[i]"/>
            </div>
            <div class="col m2">
                <a class="icon-button edit-icon adauga-linie"><i class="fas fa-plus fa-2x"></i></a>
                <a class="icon-button delete-icon sterge-linie"><i class="fas fa-trash fa-2x"></i></a>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col m5">
            <input type="text" name="Coduri" />
        </div>
        <div class="col m5">
            <input type="number" name="Cantitati" />
        </div>
        <div class="col m2">
            <a class="icon-button edit-icon adauga-linie"><i class="fas fa-plus fa-2x"></i></a>
            <a class="icon-button delete-icon sterge-linie"><i class="fas fa-trash fa-2x"></i></a>
        </div>
    </div>    
}


