@model IEnumerable<LicentaApp.Produse>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PagedLayout.cshtml";
}

<div class="row">
    <div class="col s11">
        <h4>Produse</h4>
    </div>
    <div class="col s1">
        @Html.Partial("_FloatingButton", new Tuple<string, string>(Url.Action("Create", "Produse"), "Adauga"))
    </div>
</div>

<table class="table">
    <tr>
        <th>
            Cod
        </th>
        <th>
            Denumire
        </th>
        <th>
            Tip Produs
        </th>
        <th>
            Discount
        </th>
        <th>
            Pret
        </th>
        <th>
            Furnizor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Denumire)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.TipProdus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discount)
        </td>
        <td>
            @item.Preturi.Single(x => x.EsteUtilizatAcum == 1).Valoare
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Furnizori.Denumire)
        </td>
        <td>
            @Html.Partial("_RUDButtons", new Tuple<int,string> (item.Id, "Produse"))
        </td>
    </tr>
}

</table>
