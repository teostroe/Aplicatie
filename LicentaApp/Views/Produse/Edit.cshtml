@using LicentaApp.Domain
@model LicentaApp.ViewModels.ProduseViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Actuealizeaza - @this.Model.Produse.Denumire</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.EditorForModel(new {Action = AppConstants.CRUD.Edit})
        <div class="row">
            <div class="col m2">
                <input type="submit" value="Salveaza" class="btn" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
