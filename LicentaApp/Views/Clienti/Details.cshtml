@model LicentaApp.ViewModels.Clienti.ClientReadOneViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col s12">
        <br/>
        <a href="@Url.Action("Edit", "Clienti", new {id = this.Model.Client.Id})" class="right tooltipped icon-button edit-icon" data-position="bottom" data-tooltip="Editeaza"><i class="fas fa-pencil-alt fa-2x"></i></a>
    </div>
</div>

@Html.DisplayFor(x => x.Client)
<div class="row">
    <div class="col s12">
        <ul class="tabs">
            @foreach (var item in this.Model.ViziteMedicale)
            {
                <li class="tab col s3"><a href="#vizita-medicala-@item.VizitaMedicala.IdComandaVizitaMedicala">Vizita: @item.Data.ToString("dd/MM/yyyy")</a></li>
            }
        </ul>
    </div>
    @foreach (var item in this.Model.ViziteMedicale)
    {
        <div id="vizita-medicala-@item.VizitaMedicala.IdComandaVizitaMedicala" class="col s12">
            @Html.DisplayFor(x => item.VizitaMedicala)
        </div>
    }
  
</div>