@model IEnumerable<LicentaApp.Clienti>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PagedLayout.cshtml";
}

<div class="row">
    <div class="col s11">
        <h3>Clienti</h3>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            Nume
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumarTelefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNastere)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(item.Nume + " " + item.Prenume)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumarTelefon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @item.DataNastere.ToString("dd/MM/yyyy")
        </td>
        <td>
            <a href="@Url.Action("Edit", "Clienti", new {id = item.Id})" class="tooltipped icon-button edit-icon" data-position="bottom" data-tooltip="Editeaza"><i class="fas fa-pencil-alt fa-2x"></i></a>
            <a href="@Url.Action("Details", "Clienti", new {id = item.Id})" class="tooltipped icon-button view-icon" data-position="bottom" data-tooltip="Detalii"><i class="fas fa-info fa-2x"></i></a>
        </td>
    </tr>
}

</table>
