@model IEnumerable<LicentaApp.Furnizori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PagedLayout.cshtml";
}

<div class="row">
    <div class="col s11">
        <h3>Furnizori</h3>
    </div>
    <div class="col s1">
        @Html.Partial("_FloatingButton", new Tuple<string, string>(Url.Action("Create", "Furnizori"), "Adauga"))
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Denumire)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Adresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumarTelefon)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumarTelefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.Partial("_RUDButtons", new Tuple<int, string>(item.Id, "Furnizori"))
            </td>
        </tr>
    }

</table>
